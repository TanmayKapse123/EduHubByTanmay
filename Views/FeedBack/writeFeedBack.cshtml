@model EduHubMVC.Models.FeedBack

@{
    ViewData["Title"] = "Student Section";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}
<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }
    .card-header {
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
        padding: 10px 15px;
        font-size: 18px;
        font-weight: bold;
    }
    .card-body {
        padding: 15px;
    }
    .back-to-list {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }
    .back-to-list:hover {
        background-color: #0056b3;
    }
</style>

<h1>Give</h1>

<h4>FeedBack</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Feedback Form
            </div>
            <div class="card-body">
                <form asp-action="writeFeedBack">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control"  readonly/>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourceId" class="control-label"></label>
                        <input asp-for="CourceId" class="form-control" readonly/>
                        <span asp-validation-for="CourceId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Feedback" class="control-label"></label>
                        <input asp-for="Feedback" class="form-control" />
                        <span asp-validation-for="Feedback" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
     <a asp-action="AllCourse" asp-controller="Student" class="back-to-list">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model EduHubMVC.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login Section";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Edu_Hub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
    body {
        background-color: #f7f7f7;
        font-family: Arial, sans-serif;
    }

    .container {
        margin-top: 50px;
    }

    h1, h3 {
        color: #333;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        padding-left: 40px; /* Space for the icon */
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
        background-color: #e9f5ff; /* Light blue background on focus */
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
    }

    .form-label {
        font-weight: bold;
    }

    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2); /* Enhanced shadow for 3D effect */
        transition: box-shadow 0.3s ease; /* Smooth transition */
    }

    .form-container:hover {
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3); /* Darker shadow on hover */
    }

    .input-icon {
        position: relative;
    }

    .input-icon i {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #000; /* Set icon color to black */
        font-size: 1.2em; /* Increase the icon size */
    }

    .input-icon input::placeholder {
        color: #aaa; /* Placeholder text color */
        font-style: italic;
    }
    #i1{
            margin-top: 14px;
    }
    #i2{
            margin-top: 14px;
    }
    
</style>

</head>

<div class="container mt-5">
    <h1 class="text-center">Welcome to EduHub Learning</h1>
    <h3 class="text-center">Please Enter your User Name And Password</h3>
    <div class="col-md-6 mx-auto form-container">
        <form asp-action="Login" method="post">
            <div class="mb-3 input-icon">
                <label asp-for="Username" class="form-label">User name</label>
                <i class="fa fa-user" id="i2"></i> <!-- Font Awesome Icon for User -->
                <input asp-for="Username" type="text" class="form-control" id="Username" placeholder="Enter user name" required />
            </div>
            <div class="mb-3 input-icon">
                <label asp-for="Password" class="form-label">Password</label>
                <i class="fa fa-lock" id="i1"></i> <!-- Font Awesome Icon for Password -->
                <input asp-for="Password" type="password" class="form-control" id="InputPassword" placeholder="Enter password" required />
            </div>
            <div class="d-grid mb-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- Font Awesome Script -->
}

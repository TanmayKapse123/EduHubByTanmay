@model EduHubMVC.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    .image-container {
        margin-top: 34px;
        margin-left: 175px;
    }

    .login-form {
        display: none;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .login-form input {
        margin-bottom: 10px;
        padding: 10px;
        width: 200px;
    }

    .login-form button {
        padding: 10px 20px;
    }

    .show-login .login-form {
        display: flex;
    }
</style>

<div class="container">
    <div class="login-form" id="loginForm">
         <form asp-action="Index" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">User name</label>
                <input asp-for="Username" type="text" class="form-control" id="Username" />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
    <div class="image-container">
        <img id="loginImage" src="EduHub.jpg" alt="Tanmay" width="700" height="400">
       
    </div>
</div>
